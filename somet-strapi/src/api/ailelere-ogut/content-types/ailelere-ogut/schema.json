{
  "kind": "collectionType",
  "collectionName": "ailelere_ogutler",
  "info": {
    "singularName": "ailelere-ogut",
    "pluralName": "ailelere-ogutler",
    "displayName": "Ailelere Öğüt",
    "description": "Ailelere yönelik öğüt ve rehber makaleleri"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "text.rich-text",
        "image.image-block",
        "images.gallery-block"
      ]
    },
    "isPublished": {
      "type": "boolean",
      "default": true
    },
    "publishedDate": {
      "type": "datetime"
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
