{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "Cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "text.rich-text",
        "image.image-block",
        "images.gallery-block"
      ]
    },
    "isPublished": {
      "type": "boolean",
      "default": true
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "haber",
        "duyuru",
        "etkinlik"
      ]
    }
  }
}
